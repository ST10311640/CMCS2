<Window x:Class="CMCS2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System (CMCS)"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa">
        <Grid Margin="10">
            <TabControl>
                <!-- Lecturer View -->
                <TabItem Header="Lecturer View">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Submit Claim" FontSize="22" FontWeight="Bold"
                                   Margin="0,0,0,15" Foreground="#003366"/>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Lecturer Name:" Width="160" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtLecturerName" Width="250"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Hours Worked:" Width="160" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtHoursWorked" Width="100"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Hourly Rate (R):" Width="160" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtHourlyRate" Width="100"/>
                            </StackPanel>

                            <StackPanel Orientation="Vertical" Margin="0,5">
                                <TextBlock Text="Notes:" Width="160"/>
                                <TextBox x:Name="txtNotes" Width="400" Height="60"
                                     TextWrapping="Wrap" AcceptsReturn="True"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <TextBlock Text="Upload Document:" Width="160" VerticalAlignment="Center"/>
                                <Button x:Name="btnUpload" Content="Browse..." Width="120" Click="btnUpload_Click"/>
                            </StackPanel>

                            <Button x:Name="btnSubmit" Content="Submit Claim" Width="180" Height="35"
                                Background="#0078D7" Foreground="White" FontWeight="Bold"
                                Margin="0,20,0,0" Click="btnSubmit_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Coordinator / Manager View -->
                <TabItem Header="Coordinator / Manager View">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Pending Claims" FontSize="22" FontWeight="Bold"
                               Foreground="#003366" Margin="0,0,0,10"/>

                        <ListView x:Name="lvClaims" Grid.Row="1" Height="350" Margin="0,10,0,10">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Claim ID" Width="70" DisplayMemberBinding="{Binding ClaimID}"/>
                                    <GridViewColumn Header="Lecturer" Width="140" DisplayMemberBinding="{Binding LecturerName}"/>
                                    <GridViewColumn Header="Hours" Width="70" DisplayMemberBinding="{Binding HoursWorked}"/>
                                    <GridViewColumn Header="Rate (R)" Width="80" DisplayMemberBinding="{Binding HourlyRate}"/>
                                    <GridViewColumn Header="Total (R)" Width="90" DisplayMemberBinding="{Binding TotalAmount}"/>
                                    <GridViewColumn Header="Date" Width="130" DisplayMemberBinding="{Binding SubmissionDate}"/>
                                    <GridViewColumn Header="Status" Width="90" DisplayMemberBinding="{Binding Status}"/>
                                    <GridViewColumn Header="File" Width="160" DisplayMemberBinding="{Binding FileName}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <StackPanel Grid.Row="2" Orientation="Horizontal"
                                HorizontalAlignment="Center" Margin="0,10">
                            <Button Content="Approve" Width="120" Margin="5"
                                Background="#28a745" Foreground="White"
                                Click="btnApprove_Click"/>
                            <Button Content="Reject" Width="120" Margin="5"
                                Background="#dc3545" Foreground="White"
                                Click="btnReject_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

    </Window>
